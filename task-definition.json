{
  "family": "amour-fou-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::696923547073:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::696923547073:role/amourFouTaskRole",
  "containerDefinitions": [
    {
      "name": "amour-fou",
      "image": "696923547073.dkr.ecr.ap-southeast-1.amazonaws.com/amour-fou:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "NEXT_PUBLIC_CLOUDFRONT_URL",
          "value": "https://d8guwbw7auosl.cloudfront.net"
        },
        {
          "name": "AWS_REGION",
          "value": "ap-southeast-1"
        },
        {
          "name": "S3_BUCKET_NAME",
          "value": "amour-fou-bucket"
        },
        {
          "name": "AWS_REKOGNITION_COLLECTION_ID",
          "value": "amour-fou-gallery"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/amour-fou",
          "awslogs-region": "ap-southeast-1",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:3000/ || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}